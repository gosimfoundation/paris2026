---
// Components
import Button from "components/Button.astro"

interface Props {
  date?: string
  location?: string
  links?: Array<{
    text: string
    link: string
    openInNewTab: boolean
  }>
}

const { date, location, links } = Astro.props
---

<section
  class="section section-home-header full-height"
  data-theme-section="dark"
  data-bg-section="header-home"
>
  <div class="overlay overlay-background overlay-background-video">
    <div class="styled-video playpause overlay">
      <video
        class="overlay video-landscape"
        preload="auto"
        autoplay
        loop
        muted
        webkit-playsinline
        playsinline
        poster="/videos/paris-hero-compressed.webp"
      >
        <source src="/videos/paris-hero-compressed.webm" type="video/webm" />
        <source src="/videos/paris-hero-compressed.mp4" type="video/mp4" />
      </video>
      <video
        class="overlay video-portrait"
        preload="auto"
        autoplay
        loop
        muted
        webkit-playsinline
        playsinline
      >
        <source src="/videos/paris-hero-vertical-compressed.mp4" type="video/mp4" />
      </video>
    </div>
    <div class="overlay overlay-gradient-v2"></div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <div class="logo-gosim-scroll">
        <svg width="340" height="120" viewBox="0 0 85 30" fill="none" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <linearGradient id="gosimGradient" x1="17" y1="0" x2="65" y2="0" gradientUnits="userSpaceOnUse">
              <stop offset="0%" stop-color="#FFFFFF">
                <animate attributeName="stop-color" values="#FFFFFF; #16A085; #16A085; #FFFFFF" keyTimes="0; 0.2; 0.8; 1" dur="6s" repeatCount="indefinite" begin="0.5s" />
              </stop>
              <stop offset="50%" stop-color="#FFFFFF">
                <animate attributeName="stop-color" values="#FFFFFF; #F4D03F; #F4D03F; #FFFFFF" keyTimes="0; 0.2; 0.8; 1" dur="6s" repeatCount="indefinite" begin="0.5s" />
              </stop>
              <stop offset="100%" stop-color="#FFFFFF">
                <animate attributeName="stop-color" values="#FFFFFF; #3498DB; #3498DB; #FFFFFF" keyTimes="0; 0.2; 0.8; 1" dur="6s" repeatCount="indefinite" begin="0.5s" />
              </stop>
            </linearGradient>
          </defs>
